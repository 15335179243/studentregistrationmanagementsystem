<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_tip_dialog_bg"
    android:minHeight="@dimen/dp_160"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="111.5dp">

        <RelativeLayout
            android:id="@+id/dialog_tip_title_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:minHeight="@dimen/dp_15">

            <TextView
                android:id="@+id/dialog_tip_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:visibility="visible"
                tools:text="提示" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_tip_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_tip_title_rl"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_37"
            android:gravity="center"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/color_E0E0E0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_tip_negative_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_tip_negative_btn"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_E0E0E0" />

            <TextView
                android:id="@+id/dialog_tip_positive_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_tip_positive_btn"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_3AA2E1"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_tip_single_btn_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_tip_single_btn"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/color_3AA2E1"
            android:textSize="@dimen/sp_18"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>